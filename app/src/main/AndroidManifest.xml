<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.belida">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Belida"
        tools:targetApi="31">
        <activity
            android:name=".HomeSearch"
            android:exported="false" />
        <activity
            android:name=".ImageEnroll"
            android:exported="false" />
        <activity
            android:name=".HomePage"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Declare"
            android:theme="@style/Theme.AppCompat.Light" /> <!-- <activity android:name=".HomePage" /> -->
        <activity android:name=".EventActivity" />
        <activity android:name=".DeclareOne" />
        <activity android:name=".DeclareTwo" />
        <activity android:name=".DeclareThree" />
        <activity android:name=".DeclareFour" />
        <activity android:name=".OptionFragment" />
        <activity android:name=".OptionFragment2" />
        <activity android:name=".Category" />
        <activity
            android:name=".Filter"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>