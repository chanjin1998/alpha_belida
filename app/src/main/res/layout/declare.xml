<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageButton
        android:id="@+id/back_declare_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="377dp"
        android:layout_marginBottom="590dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/declare_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="285dp"
        android:layout_marginBottom="588dp"
        android:text="신고유형 선택"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="571dp"
        android:background="#E5E5E5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="530dp"
        android:background="#E5E5E5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="480dp"
        android:background="#E5E5E5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="430dp"
        android:background="#E5E5E5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="380dp"
        android:background="#E5E5E5"/>

    <Button
        android:id="@+id/declare_btn1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="521dp"
        android:background="@null"
        android:text="광고(상점 및 타사이트 홍보, 상품 도배)"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/declare_btn2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="475dp"
        android:background="@null"
        android:text="상품 정보 모호(상품명, 이미지, 가격 등)"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <Button
        android:id="@+id/declare_btn3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="335dp"
        android:layout_marginBottom="426dp"
        android:background="@null"
        android:text="사기의심"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/declare_btn4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="345dp"
        android:layout_marginBottom="375dp"
        android:background="@null"
        android:text="기타"
        android:textColor="@color/black"
        android:textStyle="bold" />
</RelativeLayout>